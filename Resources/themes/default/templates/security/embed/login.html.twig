{% if user is defined and user %}
    <a href="{{ path('l91_sulu_website_user.logout',{'host': request.portalUrl, 'prefix': ''}) }}">Logout</a>
    <a href="{{ path('l91_sulu_website_user.profile',{'host': request.portalUrl, 'prefix': ''}) }}">{{ user.username }}</a>
{% else %}
    <form action="{{ path('l91_sulu_website_user.login_check',{'host': request.portalUrl, 'prefix': ''}) }}" method="post">
        <input type="text" id="username" name="_username" value="" placeholder="Username" />
        <input type="password" id="password" name="_password" placeholder="Password" />
        <input type="submit" value="Login" />
    </form>
{% endif %}
